@model Web.Models.StartPage
@inject Piranha.IApi Api
@{
    ViewBag.Title = Model.Title;
    ViewBag.HasImage = Model.Heading.PrimaryImage.HasValue;

    string PrimaryImage()
    {
        if (Model.Heading.PrimaryImage.HasValue)
        {
            return $"style=background-image:url({Url.Content(Model.Heading.PrimaryImage)});height:{Model.Heading.SizeInPercentage.Value}vh;";
        }
        return "";
    }

}
<header class="jumbotron jumbotron-fluid heading" @PrimaryImage()>
    <div class="container">
        <h1 class="display-3 text-responsive">
            @Model.Heading.Title
        </h1>
        <h3>
            @Model.Heading.Subtitle
        </h3>
    </div>
</header>

<div class="main">
    <div class="container-flex">
        <div class="row justify-content-center">
            <div class="col-sm-10 page-body">
                @Html.DisplayFor(m => m.Blocks)
            </div>
        </div>
    </div>
</div>