@using Web.Models.Sites
@inject Piranha.IApi Api;
@{
    var siteAppearance = Api.Sites.GetContentByIdAsync<DefaultSite>(WebApp.Site.Id).Result.Appearance;
    string selectedTheme;
    if (string.IsNullOrEmpty(siteAppearance.SelectedTheme.EnumValue))
    {
        selectedTheme = "base.bundle.js";
    }
    else
    {
        selectedTheme = siteAppearance.SelectedTheme.EnumValue + "-theme.bundle.js";
    }
}
<script src="base.bundle.js"></script>
<script src=@selectedTheme></script>