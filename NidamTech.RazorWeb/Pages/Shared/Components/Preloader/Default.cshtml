@using NidamTech.RazorWeb.Models.Regions.SiteRegions
@using NidamTech.RazorWeb.Models.Sites
@inject Piranha.IApi Api;
@{
    SiteAppearance siteAppearance = null;
    if (Api.Sites.GetContentByIdAsync<DefaultSite>(WebApp.Site.Id).Result != null)
    {
        siteAppearance = Api.Sites.GetContentByIdAsync<DefaultSite>(WebApp.Site.Id).Result.Appearance;
    }
}
<div class="d-flex justify-content-center preloader-container">
    <div class="spinner-border @(siteAppearance != null && siteAppearance.DarkMode ? "text-light" : "text-dark") preloader active" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>