@model sundhedmedalette.Models.Blocks.HeroImageBlock
@if (Model.IsFullscreen)
{
    <div class="hero-image" style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('.@Url.Content(Model.BackgroundImage)'); height: 100%">
        <div class="hero-text">
            <h1>@Model.Title</h1>
            <p>@Model.SubTitle</p>
            @if (!String.IsNullOrEmpty(Model.ButtonText))
            {
                <button>@Model.ButtonText</button>
            }
        </div>
    </div>
}
else
{
    <div class="hero-image" style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('.@Url.Content(Model.BackgroundImage)'); height: 50%">
        <div class="hero-text">
            <h1>@Model.Title</h1>
            <p>@Model.SubTitle</p>
            @if (!String.IsNullOrEmpty(Model.ButtonText))
            {
                <button>@Model.ButtonText</button>
            }
        </div>
    </div>
}